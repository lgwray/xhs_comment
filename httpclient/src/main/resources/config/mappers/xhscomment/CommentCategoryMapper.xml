<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.shinc.orm.mybatis.mappers.xhscomment.CommentCategoryMapper">
	
	<select id="getCategoryList" resultType="CommentCategory">
		SELECT 
		    id, name
		FROM
		    sh_comment_catetory
	</select>

	<insert id="addCategory" parameterType="CommentCategory">
		INSERT INTO sh_comment_catetory
		(
			name
		)
		VALUES
		(
			#{name}
		)
	</insert>
	
</mapper>